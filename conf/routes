# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           uk.co.chrisloy.bandwagon.controllers.Application.index

# Items
GET     /items                      uk.co.chrisloy.bandwagon.controllers.Application.items
POST    /items                      uk.co.chrisloy.bandwagon.controllers.Application.newItem

# Tags
GET     /tags/:name                 uk.co.chrisloy.bandwagon.controllers.Application.tags(name:String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
